{
    "title": "Pipedrive",
    "description": "elastic.io integration component for pipedrive",
    "docsUrl": "https://www.mvise.de",
    "credentials": {
        "fields": {
            "company_domain": {
                "viewClass": "TextFieldView",
                "label": "Company domain",
                "required": true,
                "placeholder": "The company domain used in pipedrive"
            },
            "token": {
                "viewClass": "TextFieldView",
                "label": "API token",
                "required": true,
                "placeholder": "The API token which will be used to authenticated the component with pipedrive"
            }
        }
    },
    "triggers": {},
    "actions": {
        "createDeal": {
            "title": "Create a new deal in pipdrive",
            "main": "./lib/actions/createDeal.js",
            "metadata": {
                "in": "./schemas/createDeal.in.json",
                "out": "./schemas/createDeal.out.json"
            },
            "fields": {
                "deal_note": {
                    "viewClass": "TextFieldView",
                    "label": "Deal note",
                    "required": true,
                    "placeholder": "The note which is attached to the deal created."
                }
            }
        }
    }
}